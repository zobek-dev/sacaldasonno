{% comment %} background: linear-gradient(270deg, #048E3A 0%, #59A531 40%); {% endcomment %}
<div class="border-b border-[#ccc]">
  <div class="gradient-{{ section.id }} py-20">
    <div class="wrapper">
      <div class="flex items-center px-8">
        <div class="my-4 py-2 lg:my-0 lg:py-0">
          <h1 style="color:{{ section.settings.title_color }}" class="font-gobold font-bold uppercase text-[24px] mb-4 lg:text-[35px]">
            {{ collection.title | escape }}
          </h1>
          <p style="color:{{ section.settings.text_color }}" class="font-gobold leading-[1.2] uppercase text-[20px] lg:text-[30px]">{{ section.settings.bajada | escape }}</p>
        </div>
      </div>
    </div> 
  </div>
</div>


<style>
  .gradient-{{ section.id }}{
    background: linear-gradient(270deg, {{ section.settings.gradient_end }} 0%, {{ section.settings.gradient_ini }} 40%);
  }
  @media(min-width: 1024px){
    .img-banner-{{ section.id }}{
      min-width: calc(100% - 130px);
    }
  }
</style>

{% schema %}
  {
    "name": "Heading Collection",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Imagen para desktop"
      },
      {
        "type": "image_picker",
        "id": "image_tablet",
        "label": "Imagen para tablet"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Imagen para mobile"
      },
      {
        "type": "text",
        "id": "bajada",
        "label": "Bajada del texto",
        "default": "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Expedita, placeat!"
      }, {
        "type": "color",
        "id": "gradient_ini",
        "label": "Color inicial del gradiente",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "gradient_end",
        "label": "Color final del gradiente",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "title_color",
        "label":"Color del texto del titulo",
        "default":"#FC7C0D"
      },  
      {
        "type": "color",
        "id": "text_color",
        "label": "Color del texto",
        "default": "#000000"
      }
    ],
    "blocks": []
  }
{% endschema %}

