<slideshow-carousel>
  <div class="slideshow slideshow-{{ section.id }} relative overflow-hidden">
    <ul class="swiper-wrapper">
      {% for block in section.blocks %}
        <li class="swiper-slide">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
            {% endif %}
            <picture>
              <source media="(min-width: 829px)" srcset="{{ block.settings.image_desktop | img_url: 'master' }}">
              <source media="(min-width: 450px)" srcset="{{ block.settings.image_tablet | img_url: 'master' }}">
              <img src="{{ block.settings.image_mobile | img_url: 'master' }}" alt="{{ block.settings.alt_text | escape }}">
            </picture>
            {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <button class="btn-next">
      {% render 'icon-caret', class: 'w-8 rotate-[270deg]' %}
    </button>
    <button class="btn-prev">
      {% render 'icon-caret', class: 'w-8 rotate-90' %}
    </button>
    <div class="swiper-pagination"></div>
  </div>
</slideshow-carousel>
{% schema %}
  {
    "name": "Slideshow",
    "blocks": [
      {
        "name": "Slideshow",
        "type": "slideshow",
        "settings": [
          {
            "type": "url",
            "id": "link",
            "label": "link para la diapositiva"
          },
          {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Inserta el banner imagen para desktop"
          },
          {
            "type": "image_picker",
            "id": "image_tablet",
            "label": "Inserta el banner imagen para tablet"
          },
          {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Inserta el banner imagen para movil"
          }, {
            "type": "text",
            "id": "alt_text",
            "label": "Inserta el texto alternativo (SEO)"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slideshow"
      }
    ]
  }
{% endschema %}