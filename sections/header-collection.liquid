{% comment %} background: linear-gradient(270deg, #048E3A 0%, #59A531 40%); {% endcomment %}

<div class="grid grid-cols-2" style="">
  <div>
    <picture>
      <source srcset="{{ section.settings.image_desktop | img_url: 'master' }}" media="(min-width: 1024px)">
      <source srcset="{{ section.settings.image_tablet | img_url: 'master' }}" media="(min-width: 768px)">
      <img srcset="{{ section.settings.image_mobile | img_url: 'master' }}" alt="{{ section.settings.bajada | escape }}">
    </picture>
  </div>
  <div>
    <div>
      <h1>{{ collection.title | escape }}</h1>
      <p>{{ section.settings.image_mobile | escape }}</p>
    </div>
  </div>
</div>
<div class="wrapper">
  {% render 'breadcrumb' %}
  {% if collection.description != blank %}
  <div class="prose">
    {{ collection.description }}
  </div>
  {% endif  %}   
</div>

{% schema %}
  {
    "name": "Heading Collection",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Imagen para desktop"
      },
      {
        "type": "image_picker",
        "id": "image_tablet",
        "label": "Imagen para tablet"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Imagen para mobile"
      },
      {
        "type": "text",
        "id": "bajada",
        "label": "Bajada del texto"
      },
      {
        "type": "color",
        "id":"gradient_ini",
        "label": "Color inicial del gradiente",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "gradient_end",
        "label":"Color final del gradiente",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Color del texto",
        "default": "#000000"
      }
    ],
    "blocks": []
  }
{% endschema %}