<div class="wrapper flex flex-col justify-left md:[&>section]:my-7 [&>section]:my-4 my-8 [&>*]:w-[100%] sm:[&>*]:w-[85%] md:[&>*]:w-[60%] [&>*]:mx-auto [&>section]:space-y-3">

{% comment %} WHATSAPP DESKTOP {% endcomment %}
  <section class="hidden sm:flex">
    <div class="sm:mr-4 icon flex justify-center items-center w-1/5 min-h-[60px] min-w-[60px] max-w-[60px] max-h-[60px] md:min-h-[90px] md:min-w-[90px] md:max-h-[90px] md:max-w-[90px] md:h-[90px] md:w-[90px] rounded-full p-2 md:p-6 bg-[#edeef0]">
    <img src="{{ section.settings.image_whatsapp | image_url }}" width="auto" height="auto" />
    </div>
    <div class="info w-4/5">
      <h2 class="text-lg whitespace-nowrap">{{ section.settings.whatsapp-title }}</h2>
      <p>{{ section.settings.whatsapp-content }}</p>
      <a
        href="https://wa.me/{{ section.settings.whatsapp-link }}"
        _blank
        class="mt-4 block w-max border border-black md:w-[50%] py-1 px-4 rounded-2xl text-center"
      >
        {{ section.settings.whatsapp-number }}
      </a>
    </div>
  </section>

  {% comment %} WHATSAPP MÓVIL {% endcomment %}
  <section class="flex sm:hidden">
    <div class="mr-4 icon flex justify-center items-center w-1/5 min-h-[60px] min-w-[60px] max-w-[60px] max-h-[60px] md:min-h-[90px] md:min-w-[90px] md:max-h-[90px] md:max-w-[90px] md:h-[90px] md:w-[90px] rounded-full p-2 md:p-6 bg-[#edeef0]">
    <img src="{{ section.settings.image_whatsapp | image_url }}" width="auto" height="auto" />
    </div>
    <div class="info w-4/5">
      <h2 class="text-lg">{{ section.settings.whatsapp-title }}</h2>
      <p>{{ section.settings.whatsapp-content }}</p>
      <a
        href="https://wa.me/{{ section.settings.whatsapp-link }}"
        _blank
        class="mt-4 block w-max border border-black md:w-[50%] py-1 px-4 rounded-2xl text-center"
      >
        {{ section.settings.whatsapp-number-mobile }}
      </a>
    </div>
  </section>
</div>

{% schema %}
  {
    "name": "Whatsapp",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_whatsapp",
        "label": "Imagen whatsapp"
      },
      {
        "type": "text",
        "id": "whatsapp-title",
        "label": "Título de whatsapp"
      },
      {
        "type": "text",
        "id": "whatsapp-content",
        "label": "Descripción"
      },
      {
        "type": "text",
        "id": "whatsapp-number",
        "label": "Número de teléfono"
      },
      {
        "type": "text",
        "id": "whatsapp-link",
        "label": "Iniciar whatsapp (sólo poner número: 569XXXXXXXX)"
      },
      {
        "type": "text",
        "id": "whatsapp-number-mobile",
        "label": "Botón whatsapp mobile"
      },
    ],
    "blocks": []  
  }
{% endschema %}