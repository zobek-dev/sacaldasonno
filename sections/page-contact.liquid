<div class="w-full wrapper flex flex-col justify-left md:[&>section]:my-7 [&>section]:my-4 my-8 sm:[&>*]:w-[85%] md:[&>*]:w-[60%] sm:[&>*]:mx-auto [&>section]:space-y-3">
  {% render 'breadcrumb' %}

  <section class="flex">
    <div class="icon -mb-2 flex justify-center items-center mr-12 lg:mr-6">
