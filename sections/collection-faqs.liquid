<div class="py-4 my-8">
  <div class="wrapper">
    <div class="max-w-[1100px] mx-auto text-[#262626]">
      <h2 class="uppercase font-bold text-[22px] lg:text-[30px] my-4">Preguntas Frecuentes</h2>
      <ul class="border-t-[0.5px] border-[#4b4f54]">
        {% for block in section.blocks %}
        <li >
          <details class="py-4 border-b-[0.5px] border-[#4b4f54] cursor-pointer faq-detail">
            <summary class="flex items-center justify-between w-full">
              <span class="uppercase font-bold text-[18px] lg:text-[20px]">{{ block.settings.title | escape }}</span>
              {% render 'icon-plus-circle' class: 'plus w-[44px] h-[44px]'%}
              {% render 'icon-close-circle' class: 'minus w-[33px] h-[33px]'%}
            </summary>
            <div class="pt-3 text-base">
              {{ block.settings.content }}
            </div>
          </details>
        </li> 
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

<style>

  .faq-detail summary .minus{
    display:none;
  }

  .faq-detail[open] summary .plus{
    display: none;
  }
  .faq-detail[open] summary .minus{
    display: block;
  }
</style>
