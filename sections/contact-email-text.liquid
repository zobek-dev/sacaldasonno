<div class="wrapper flex flex-col justify-left md:[&>section]:my-7 [&>section]:my-4 my-8 [&>*]:w-[100%] sm:[&>*]:w-[85%] md:[&>*]:w-[60%] [&>*]:mx-auto [&>section]:space-y-3">
{% comment %} EMAIL {% endcomment %}
  <section class="flex items-center">
    <div class="flex items-center justify-center bg-[#edeef0] rounded-full min-h-[60px] min-w-[60px] max-w-[60px] max-h-[60px] md:min-h-[90px] md:min-w-[90px] md:max-h-[90px] md:max-w-[90px] md:h-[90px] md:w-[90px] mr-4">
      <div class="border-black icon MOBILE min-h-[30px] max-h-[30px] min-w-[40px] max-w-[40px] DESKTOP md:min-h-[40px] md:max-h-[40px] md:min-w-[50px]  md:max-w-[50px] md:h-[50px] md:w-[50px] rounded-full flex">
        <img src="{{ section.settings.image_email | image_url }}" width="auto" height="auto" />
      </div>
    </div>
    <div>
      <h3 class="text-lg">{{ section.settings.email-title }}</h3>
      <a
        href="mailto:{{ section.settings.email }}"
        class="underline italic font-bold mt-4 block w-[100%] border border-black py-1 px-4 rounded-2xl text-center"
        >{{ section.settings.email }}</a
      >
    </div>
  </section>
</div>

{% schema %}
  {
    "name": "Email",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_email",
        "label": "Imagen e-mail"
      },
      {
        "type": "text",
        "id": "email-title",
        "label": "Título de llámanos"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Dirección de correo"
      },
    ],
    "blocks": []  
  }
{% endschema %}