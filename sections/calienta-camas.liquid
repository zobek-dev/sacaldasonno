              '2P': '{{ "2-plazas-maxi-algodon.jpg" | asset_url }}',
              'K': '{{ "king-algodon-maxi.jpg" | asset_url }}'
            }
          };
  
          return {
            options: options,
            selectedOption: options[0],
            currentImage: images[type][options[0]],
            changeImage(option) {
              this.selectedOption = option;
              this.currentImage = images[type][option];
            }
          };
        });
