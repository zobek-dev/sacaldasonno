<div class="pb-4 mb-4">
  <div class="wrapper">
    <div class="pt-4">
      {% render 'breadcrumb' %}
    </div>
    <h2 class="text-[22px] lg:text-[35px] font-gobold uppercase text-center mt-12 mb-8">{{ section.settings.title | escape }}</h2>
    <ul class="block text-center">
      {% for block in section.blocks %}
        <li class="inline-block max-w-full align-top lg:max-w-[45vw] xl:max-w-[25vw] lg:px-4 xl:px-8 mb-8">
          <img
            src="{{ block.settings.image | img_url: '100x' }}"
            alt="{{ block.settings.title | escape }}"
            width="100"
            height="{{ 100 | divided_by: block.settings.image.aspect_ratio | ceil }}"
            loading="lazy"
            class="mx-auto"
          >
          <h3 class="py-4 text-[18px] lg:text-[24px] font-bold uppercase">{{ block.settings.title | escape }}</h3>
          <div>
            {{ block.settings.content }}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
  {
    "name": "Pagina Nosotros",
    "max_blocks": 5,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Titulo de la secci√≥n",
        "default": "Lorem, ipsum dolor."
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Tarjeta",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen de la tarjeta"
          }, {
            "type": "text",
            "id": "title",
            "label": "Titulo de la tarjeta",
            "default": "Lorem ipsum dolor sit"
          }, {
            "type": "richtext",
            "id": "content",
            "label": "Titulo de la tarjeta",
            "default": "<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iste accusantium pariatur repellendus qui reprehenderit, maxime saepe, quaerat voluptatibus incidunt, veritatis dolor distinctio in laborum inventore officia quo nemo id! Assumenda.</p>"
          }
        ]
      }
    ]
  }
{% endschema %}

