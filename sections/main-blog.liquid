<div class="wrapper">
  <div class="pt-4">
    {% render 'breadcrumb' %}
  </div>
  <h1 class="text-center uppercase font-gobold my-8 text-[22px] lg:text-[35px] tracking-[1.5px]">
    {{ blog.title | escape }}
  </h1>
  <div class="pb-20">
    {% paginate blog.articles by 12 %}
      <ul class="grid grid-cols-2 lg:grid-cols-3 gap-2 lg:gap-4">
        {% for article in blog.articles %}
          {% render 'article-card', article: article %}
        {% endfor %}
      </ul>
      {% if paginate.parts > 1 %}
      <div class="py-8 block">
        {% render 'pagination', paginate: paginate %}
      </div>
      {% endif %}
    {% endpaginate %}
  </div>
</div>