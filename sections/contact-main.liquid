{
  "name": "contacto",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "llamanos",
      "limit": 1,
      "name": "Llámanos",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_llamanos",
          "label": "Imagen llámanos"
        },
        {
          "type": "text",
          "id": "llamanos-title",
          "label": "Título de llámanos"
        },
        {
          "type": "text",
          "id": "llamanos-content",
          "label": "Descripción"
        },
        {
          "type": "text",
          "id": "llamanos-number",
          "label": "Número de teléfono"
        },
        {
          "type": "text",
          "id": "llamanos-link",
          "label": "Llamar a Servicio al cliente (sólo poner número: 569XXXXXXXX)"
        },
        {
          "type": "text",
          "id": "llamanos-number-mobile",
          "label": "Botón llámanos mobile"
        }
      ]
    },
    {
      "type": "whatsapp",
      "limit": 1,
      "name": "WhatsApp",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_whatsapp",
          "label": "Imagen whatsapp"
        },
        {
          "type": "text",
          "id": "whatsapp-title",
          "label": "Título de whatsapp"
        },
        {
          "type": "text",
          "id": "whatsapp-content",
          "label": "Descripción"
        },
        {
          "type": "text",
          "id": "whatsapp-number",
          "label": "Número de teléfono"
        },
        {
          "type": "text",
          "id": "whatsapp-link",
          "label": "Iniciar whatsapp (sólo poner número: 569XXXXXXXX)"
        },
        {
          "type": "text",
          "id": "whatsapp-number-mobile",
          "label": "Botón whatsapp mobile"
        }
      ]
    },
    {
      "type": "email",
      "limit": 1,
      "name": "Email",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_email",
          "label": "Imagen e-mail"
        },
        {
          "type": "text",
          "id": "email-title",
          "label": "Título de llámanos"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Dirección de correo"
        }
      ]
    }
  ]
}
{% endschema %}
