              '1P': '{{ "eco-adapto-1-plaza.jpg" | asset_url }}',
              '2P': '{{ "eco-adapto-2-plazas.jpg" | asset_url }}'
            },
            maxiAdapto: {
              '1/2P': '{{ "media-plaza-maxi-adapto.jpg" | asset_url }}',
              '2P': '{{ "adapto-maxi-2-plazas.jpg" | asset_url }}',
              'K': '{{ "king-maxi-adapto.jpg" | asset_url }}',
              'SK': '{{ "super-king-maxi-adapto.jpg" | asset_url }}'
