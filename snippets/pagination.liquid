{% comment %}
  @paginate: paginate object (required)
{% endcomment %}

<div class="my-8">
  <nav class="" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
    <ul class="flex items-center justify-center gap-x-4 w-full text-black">
      {% if paginate.previous %}
        <li>
          <a href="{{ paginate.previous.url }}" class="text-black" aria-label="{{ 'general.pagination.previous' | t }}">
            {% render 'icon-caret', class: 'w-6 rotate-[90deg]' %}
          </a>
        </li>
      {% endif %}
      {% for part in paginate.parts %}
        <li>
          {% if part.is_link %}
          <a href="{{ part.url }}" class="font-bold" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
            {{ part.title }}
          </a>
          {% else %}
            {% if part.title == paginate.current_page %}
            <a
              role="link"
              aria-disabled="true"
              class="bg-[#a00] text-white py-1 px-2 font-bold"
              aria-current="page"
              aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
            >
              {{ part.title }}
            </a> 
            {% else %}  
              <span class="font-bold">{{ part.title }}</span>
            {% endif %}
          {% endif %}
        </li>  
      {% endfor %}  
      {% if paginate.next %}
        <li>
          <a href="{{ paginate.next.url }}" class="text-black" aria-label="{{ 'general.pagination.previous' | t }}">
            {% render 'icon-caret', class: 'w-6 rotate-[270deg]' %}
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
</div> 