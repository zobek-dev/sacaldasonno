    <div class="flex items-center justify-center bg-[#edeef0] rounded-full min-h-[60px] min-w-[60px] max-w-[60px] max-h-[60px] md:min-h-[90px] md:min-w-[90px] md:max-h-[90px] md:max-w-[90px] md:h-[90px] md:w-[90px] mr-4">
      <div class="border-black icon min-h-[40px] min-w-[40px] max-w-[40px] max-h-[40px] md:min-h-[50px] md:min-w-[50px] md:max-h-[50px] md:max-w-[50px] md:h-[50px] md:w-[50px] rounded-full flex">
        {% render 'icon-envelope' %}
